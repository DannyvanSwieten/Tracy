    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/tracey.exe",
            "args": ["--file",
                "${workspaceFolder}/assets/Duck/glTF/Duck.gltf",
                "1280", "720"
            ],
            // "args": ["--server",
            //         "127.0.0.1:7000",
            //         "1280", "720"
            //     ],
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal"
        },
        {
            "name": "Launch release",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/release/tracey.exe",
            // "args": ["--file",
            //     "${workspaceFolder}/assets/Sponza/glTF/Sponza.gltf",
            //     "1920", "1080"
            // ],
            "args": ["--server",
                    "127.0.0.1:7000",
                    "1920", "1080"
                ],
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal"
        }
    ]
}