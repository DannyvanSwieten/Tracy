{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch Debug MacOS",
            "program": "${workspaceFolder}/target/debug/tracey",
            "args": [
                "--server",
                "localhost:7000",
                "1280",
                "720"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch debug Windows",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/tracey.exe",
            // "args": [
            //     "--file",
            //     "${workspaceFolder}/assets/Sponza/glTF/Sponza.gltf",
            //     "1280",
            //     "720"
            // ],
            "args": [
                "--server",
                "localhost:7000",
                "1280",
                "720"
            ],
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal"
        },
        {
            "name": "Launch release Windows",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/release/tracey.exe",
            // "args": ["--file",
            //     "${workspaceFolder}/assets/Sponza/glTF/Sponza.gltf",
            //     "1920", "1080"
            // ],
            "args": [
                "--server",
                "localhost:7000",
                "1280",
                "720"
            ],
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal"
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}